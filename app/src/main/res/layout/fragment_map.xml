<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:id="@+id/map_view"
    tools:context="com.theedo.kuba.lazydaisies.Fragments.MapFragment">


    <com.google.android.gms.maps.MapView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapView"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_wezyk1"
            android:scaleType="fitCenter"
            android:scaleX="0.2"
            android:scaleY="0.2"
            android:tint="@color/pink" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Masz pytanie do oferty lub propozycjÄ™ pokazu? Napisz do nas!"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:tint="@color/white"
                app:srcCompat="@android:drawable/stat_sys_speakerphone" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text=" 661 366 349"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="19dp"
                app:srcCompat="@android:drawable/ic_dialog_email"
                android:layout_alignTop="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toLeftOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:gravity="center"

                android:text="burleska@lazydaisies.pl"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_wezyk1"
            android:scaleType="fitCenter"
            android:scaleX="0.2"
            android:scaleY="0.2"
            android:tint="@color/pink" />


    </LinearLayout>
</LinearLayout>
