<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@color/gray"
              android:gravity="top"
              android:orientation="vertical"
              tools:context="com.theedo.kuba.lazydaisies.Fragments.StartFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/ic_wezyk1"
            android:scaleType="fitCenter"
            android:scaleX="0.2"
            android:scaleY="0.2"
            android:tint="@color/pink"/>

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/SimpleExoPlayer"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:default_artwork="@drawable/ic_sad"
            app:use_artwork="true"
            app:use_controller="false">

            <ImageView
                android:id="@+id/error_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_sad"/>
        </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SimpleExoPlayer"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/ic_wezyk1"
                android:scaleType="fitCenter"
                android:scaleX="0.2"
                android:scaleY="0.2"
                android:tint="@color/pink"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Urok, Wdzięk i Słodycz"
                android:textColor="@color/pink"
                android:textSize="20sp"

                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Lazy Daisies to pełne wdzięku, radości i słodyczy urocze trio oraz złotousty zaklinacz ognia."
                android:textColor="@color/white"
                android:textSize="15sp"

                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Występy Lazy Daisies zawsze przygotowywane są z zachowaniem dobrego smaku, a prezentowany erotyzm jest subtelny i przyjemny dla każdego oka."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Celem pokazu jest uwiedzenie widza, przeniesienie go w krainę Złotej Ery Hollywoodu, a wykorzystanie nagości jest zaledwie symboliczne."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="normal"/>

        </LinearLayout>


    </LinearLayout>


