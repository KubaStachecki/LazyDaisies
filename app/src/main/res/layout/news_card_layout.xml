<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@color/gray"
    card_view:cardCornerRadius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray">

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:id="@+id/portret_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            card_view:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/ic_wezyk1"
            android:layout_above="@+id/opis_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="47dp"
            android:layout_marginEnd="47dp" />

        <TextView
            android:id="@+id/imie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:gravity="center"
            android:text="Odetta Orchidee!"
            android:textColor="@color/pink"
            android:textSize="23sp"
            android:layout_below="@+id/zapowiedz_text"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/portret_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/opis_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/portret_img"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="30dp"
            android:text="Tajemnicza oraz pełna seksapilu blond piękność. Ulubienica tłumów, czasem wyrafinowana, czasem psotna, ale zawsze niezmiennie i bezwzględnie słodka!"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/zapowiedz_text"
android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Prosimy o werble i fanfary dla naszej gwiazdy! Przed Państwem..."
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_alignTop="@+id/portret_img"
            android:layout_toRightOf="@+id/portret_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>